<%= render "shared/errors", obj:@article%>    
    <div class='row'>
        <div class='col-xs-12'>
            <%= form_for @article do |f| %>
                <div class="row mb-3">
                    <div class='col-sm-2 '>
                        <%= f.label :title, class:'col-form-label' %>
                    </div>     
                    <div class='col-sm-10'>    
                        <%= f.text_field :title, class: "form-control" %>
                    </div>
                </div>
                <div class='row mb-3'>
                 <div class="col-sm-2 ">
                <%= f.label :description, class:"col-form-label" %>
                 </div>
                  <div class="col-sm-10">
                <%= f.text_area :description, rows:10, class: "form-control" %>
                  </div>
                </div>
                
                <div class='row mb-3'>
                 <div class="col-sm-10 offset-sm-2">
                  <%= f.submit class:"btn btn-primary" %>
                 </div>
                </div>
                
            <% end %>
            <div class="col-xs-4 offset-sm-5">
            [ <%= link_to 'Cancel and hit back to all articles', articles_path%> ]
            </div>
        </div>
    </div>