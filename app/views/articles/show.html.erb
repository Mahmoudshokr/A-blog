
<h2 align="center">Title: <%= @article.title %> </h2>
    <div class="card card-body bg-light col-sm-8 offset-sm-2">
        <h4 class="center "><strong>Description:</strong></h4>
        <hr>
        <%= simple_format(@article.description) %>
    
       <div class="actions"> 
            <%= link_to 'edit', edit_article_path(@article), class: "btn btn-sm btn-primary"%>
            <%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger" %>
            <%= link_to 'view all articles', articles_path, class: "btn btn-sm btn-success" %>
       </div>    
    </div>