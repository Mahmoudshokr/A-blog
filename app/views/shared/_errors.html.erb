<% if obj.errors.any? %>
<div>
    <div class="col-sm-6 offset-sm-4">
    <div class="alert alert-danger">
        <div class="panel-heading">
        <h2 class="panel-title">
        <%= pluralize(obj.errors.count, "error") %>
        </h2>
        <div class="panel-body">
            <ul>
                <% obj.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
                </ul>
        </div>
        </div>
    </div>
    </div>   
</div> 
    
<% end %>