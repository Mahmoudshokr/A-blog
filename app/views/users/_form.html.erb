
    <div>
        <div class='col-xs-12'>
            <%= form_for @user do |f| %>
                <div class="row mb-3">
                    <div class='col-sm-2 '>
                        <%= f.label :username, class:'col-form-label' %>
                    </div>     
                    <div class='col-sm-10'>    
                        <%= f.text_field :username, class: "form-control" %>
                        <p class='error' style="color:red"><%= show_errors(@user, :username) %></p>

                    </div>
                </div>
                <div class='row mb-3'>
                 <div class="col-sm-2 ">
                <%= f.label :email, class:"col-form-label" %>
                 </div>
                  <div class="col-sm-10">
                <%= f.email_field :email, class: "form-control" %>
                 <p class='error' style="color:red"><%= show_errors(@user, :email) %></p>
                  </div>
                </div>
                <div class='row mb-3'>
                 <div class="col-sm-2 ">
                <%= f.label :password, class:"col-form-label" %>
                 </div>
                  <div class="col-sm-10">
                <%= f.password_field :password, class: "form-control" %>
                 <p class='error' style="color:red"><%= show_errors(@user, :password) %></p>
                  </div>
                </div>
                
                <div class='row mb-3'>
                 <div class="col-sm-10 offset-sm-2">
                  <%= f.submit(@user.new_record? ? "Sign up" : "Update" , class:"btn btn-primary offset-sm-4") %>
                 </div>
                </div>
                
            <% end %>
          
        </div>
    </div>