<h1 align="center">All users</h1>

<% @user.each do |t| %>
    <div>
        <div class="col-sm-8 offset-sm-2 card card-body bg-light" style="margin-bottom:10px">
            <div class="user-username">
            <%= link_to gravatar_for(t), user_path(t) %>
                <%= link_to t.username, user_path(t), style:"text-decoration: none ;" %>
            </div>

            <div class="user-body">
                 <%= t.email%><br>
                 <%= pluralize(t.articles.count,"article") if t.articles%>
            </div>
        
            <div class="actions"> 
                <%= link_to 'edit', edit_user_path(t), class: "btn btn-sm btn-primary"%>
                <%= link_to 'Delete', user_path(t), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger" %>
            </div>  
        </div>
    </div>                
<% end %>       
  